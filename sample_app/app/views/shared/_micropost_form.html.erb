<%= form_with class: "micropost-form", model: @micropost do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Where were you while we were getting high?" %>
  </div>
  <div class="bottom">
    <span class="image">
      <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
    </span>
    <%= f.submit "Post", class: "btn btn-primary" %>
  </div>
<% end %>